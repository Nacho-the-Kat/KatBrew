<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="CrixusHD">
        <preConditions onError="MARK_RAN">
            <columnExists tableName="Token"
                          columnName="holder_total"/>
        </preConditions>

        <dropColumn tableName="Token" columnName="holder_total"/>
        <addColumn tableName="Token">
            <column name="holder_total" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="Token" columnName="holder_total"/>
        </rollback>
    </changeSet>

</databaseChangeLog>