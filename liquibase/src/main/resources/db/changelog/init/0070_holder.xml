<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="CrixusHD">
        <preConditions onError="HALT">
            <not>
                <tableExists tableName="Holder"/>
            </not>
        </preConditions>

        <createTable tableName="Holder">
            <column type="INT" name="id" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="PK_HOLDER" nullable="false"/>
            </column>
            <column type="text" name="address">
                <constraints nullable="false" unique="true"/>
            </column>
            <column type="int" name="fk_token">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="Holder" baseColumnNames="fk_token" constraintName="FK_HOLDER_TOKEN" referencedTableName="Token"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropTable tableName="Holder"/>
        </rollback>
    </changeSet>

</databaseChangeLog>