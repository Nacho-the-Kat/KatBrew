<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="CrixusHD">
        <preConditions onError="MARK_RAN">
            <not>
                <tableExists tableName="Balance"/>
            </not>
        </preConditions>

        <createTable tableName="Balance">
            <column type="INT" name="id" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="PK_BALANCE" nullable="false"/>
            </column>
<!--            todo holder table-->
            <column type="int" name="fk_holder">
                <constraints nullable="false"/>
            </column>
            <column type="bigint" name="balance"/>
            <column type="int" name="holder_id"/>
            <column type="VARCHAR(255)" name="tick" />
        </createTable>

        <rollback>
            <dropTable tableName="Balance"/>
        </rollback>
    </changeSet>

</databaseChangeLog>